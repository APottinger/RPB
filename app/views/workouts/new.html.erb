<h1>Add a New Workout</h1>
<%= form_for @workout do |f| %>

 <%= f.label :name %>
  <%= f.text_field :name %>
    <br></br>

  <%= f.label :category %>
  <%= f.select :category,options_for_select(["run", "swim", "bike", "walk", "weights", "other"]), include_blank: true  %>
    <br></br>

  <%= f.label :pace %>
  <%= f.text_field :pace %>
  <br></br>

  <%= f.label :distance, "Distance in Miles" %>
  <%= f.text_field :distance %>
    <br></br>


    <h4>Record a Training Session for this workout:</h4>
    <%= f.fields_for :trainings do |t|%>

      <%= t.label :race_id %>
      <%= t.collection_select :race_id, current_user.races, :id, :title    %>

      <%= t.label :date %>
      <%= t.date_field :date %>

      <%= t.label :feeling %>
      <%= t.text_field :feeling %>

      <br></br>


    <% end %>
  <%= f.submit%>

<% end %>